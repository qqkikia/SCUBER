<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginColor"
    android:orientation="vertical"
    tools:context="layout.register2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Profile"
        android:textColor="@color/grey"
        android:textSize="14pt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:textColor="@color/grey"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/regFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:background="@drawable/all_corners_rounded"
        android:padding="12dp"/>

    <EditText
        android:id="@+id/regLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:background="@drawable/all_corners_rounded"
        android:padding="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MOBILE NUMBER"
        android:textColor="@color/grey"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/regPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0612345667"
        android:inputType="phone"
        android:background="@drawable/all_corners_rounded"
        android:padding="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="LANGUAGE"
        android:textColor="@color/grey"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/regLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gotta change this to a language picker"
        android:background="@drawable/all_corners_rounded"
        android:padding="12dp"/>

</LinearLayout>
